<Window x:Class="WpfAppTestTouchOnDialog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTestTouchOnDialog"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <Grid DockPanel.Dock="Top">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>    
                <Button Grid.Row="0" x:Name="btnShowSys" Click="btnShowSys_Click"
                    Height="48" Margin="20,10">Button 1: Show System.Window.MessageBox(this)</Button>
                <!--<Button Grid.Row="1" x:Name="btnShowCustomDialog" Click="btnShowCustomDialog_Click"
                    Height="48" Margin="20,10">Show simple custom dialog</Button>-->
            </Grid>
            
            <Grid DockPanel.Dock="Bottom">
                <Label Background="LightGray" Margin="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Tap here like crazy while the modal message box is showing"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
